<div id="greetings" style="
  width: 100%;
  text-align: left;
">
  <h4 style="
    font-family: 'Lato', sans-serif;
    font-weight: 400;
    font-size: 18px;
    color: {{styles.font.primaryColor}};
    line-height: 25.6px;
  ">
    {{#if name}}Olá, {{name}}!{{else}}Olá!{{/if}}
  </h4>
  {{#if subject}}
  <h3 style="
    font-family: 'Lato', sans-serif;
    font-weight: 700;
    font-size: 18px;
    line-height: 25.6px;
    color: {{styles.font.highlightedColor}};
  ">
    {{subject}}
  </h3>
  {{/if}}
</div>